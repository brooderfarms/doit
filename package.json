{
  "name": "shashastream-encoder",
  "version": "1.0.0",
  "description": "Lightweight standalone encoder for streaming presentations and content",
  "main": "src/main.js",
  "homepage": "./",
  "author": "ShashaStream",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "build": "npm run react-build && electron-builder",
    "build:win": "npm run react-build && electron-builder --win",
    "build:mac": "npm run react-build && electron-builder --mac",
    "build:linux": "npm run react-build && electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@mui/material": "^5.13.0",
    "@mui/icons-material": "^5.13.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^24.0.0",
    "react-scripts": "5.0.1",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "electron-is-dev": "^2.0.0"
  },
  "build": {
    "appId": "com.shashastream.encoder",
    "productName": "ShashaStream Encoder",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
